<p style="color: green"><%= notice %></p>

<div id="<%= dom_id @site %>">
  <p>
    <strong>Name:</strong>
    <%= @site.name %>
  </p>

  <p>
    <strong>URL:</strong>
    <%= @site.url %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @site.description %>
  </p>
</div>

<div>
  <%= link_to "Edit this site", edit_site_path(@site) %> |
  <%= link_to "Back to sites", sites_path %>

  <%= button_to "Destroy this site", @site, method: :delete %>
</div>
